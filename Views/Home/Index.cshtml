@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Login</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url('Pictures/lecturebackground.jpg');
            background-size: 350px; /* Adjust this value to make the image smaller or larger */
            background-repeat: repeat;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(255, 255, 255, 0.6); /* 90% white overlay for 10% opacity effect */
                z-index: 0;
            }

        .login-container {
            background-color: white;
            padding: 2.65rem;
            border-radius: 5px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3); /* Enhanced drop shadow */
            width: 397px;
            position: relative;
            z-index: 1;
        }

        h1 {
            color: #333;
            font-weight: bold;
            margin-bottom: 23px;
            text-align: center;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            h1 img {
                margin-right: 30px; /* Adds space between the image and text */
                height: 60px; /* Adjust the size of the logo as needed */
                width: auto;
            }

        form {
            display: flex;
            flex-direction: column;
        }

        input {
            margin: 13px 0;
            padding: 13px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 18px;
        }

        button {
            background-color: #0066cc;
            color: white;
            border: none;
            padding: 13px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 20px;
            margin-top: 10px;
        }

            button:hover {
                background-color: #0056b3;
            }

        .signup-link {
            text-align: center;
            margin-top: 26px;
        }

            .signup-link a {
                color: #666;
                text-decoration: none;
                font-size: 18px;
            }

                .signup-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>
            <img src="Pictures/VClogo.png" alt=""> Lecturer Login
        </h1>
        <form>
            <input type="text" placeholder="Username" required>
            <input type="password" placeholder="Password" required>
            <button type="submit">Login!</button>
        </form>
        <div class="signup-link">
            <a asp-controller="Lecturer" asp-action="CreateLogin">Click Here to Sign-up!</a>
        </div>
    </div>
</body>
</html>
