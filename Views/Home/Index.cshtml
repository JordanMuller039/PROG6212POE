@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Login</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url('Pictures/lecturebackground.jpg');
            background-size: 350px;
            background-repeat: repeat;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(255, 255, 255, 0.6);
                z-index: 0;
            }

        .login-container {
            background-color: white;
            padding: 2.65rem;
            border-radius: 5px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            width: 397px;
            position: relative;
            z-index: 1;
        }

        h1 {
            color: #333;
            font-weight: bold;
            margin-bottom: 23px;
            text-align: center;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            h1 img {
                margin-right: 30px;
                height: 60px;
                width: auto;
            }

        form {
            display: flex;
            flex-direction: column;
        }

        input {
            margin: 13px 0;
            padding: 13px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 18px;
        }

        button {
            background-color: #0066cc;
            color: white;
            border: none;
            padding: 13px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 20px;
            margin-top: 10px;
        }

            button:hover {
                background-color: #0056b3;
            }

        .signup-link {
            text-align: center;
            margin-top: 26px;
        }

            .signup-link a {
                color: #666;
                text-decoration: none;
                font-size: 18px;
            }

                .signup-link a:hover {
                    text-decoration: underline;
                }

        .verify-claims-link {
            text-align: center;
            margin-top: 20px;
            color: grey;
            font-style: italic;
        }

            .verify-claims-link a {
                color: #0066cc;
                font-weight: bold;
                text-decoration: none;
            }

                .verify-claims-link a:hover {
                    text-decoration: underline;
                }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>
            <img src="Pictures/VClogo.png" alt="Logo"> User Login
        </h1>

        <!-- Display error message if ViewBag.ErrorMessage is set -->
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <!-- Login Form -->
        <form method="post" asp-controller="Lecturer" asp-action="Login">
            <div class="form-group">
                <input type="text" placeholder="Username" name="username" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Login!</button>
        </form>

        <!-- Signup Link -->
        <div class="signup-link">
            <a asp-controller="Lecturer" asp-action="CreateLogin">Click Here to Sign-up!</a>
        </div>
    </div>
</body>

</html>
