<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Claims</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(255, 255, 255, 0.6);
                z-index: -1;
            }

        body {
            background-image: url('@Url.Content("~/Pictures/lecturebackground.jpg")');
            background-size: 350px;
            background-repeat: repeat;
            background-position: center;
        }

        .claims-container {
            background-color: white;
            min-height: 300px;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 1200px;
            z-index: 1;
        }

        h2 {
            color: #333;
            font-weight: bold;
            font-size: 24px;
            margin-bottom: 1rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 0.75rem;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        a {
            color: #007BFF;
            text-decoration: none;
            margin-right: 10px;
        }

            a:hover {
                text-decoration: underline;
            }

        .back-button {
            display: inline-block;
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            margin-top: 20px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .back-button:hover {
                background-color: #0056b3;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="claims-container">
        <h2>Verify Claims</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>ClaimID</th>
                    <th>LecturerID</th>
                    <th>Total Hours Worked</th>
                    <th>Amount Due</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ClaimID</td>
                        <td>@item.LecturerID</td>
                        <td>@item.TotalHoursWorked</td>
                        <td>@item.AmountDue</td>
                        <td>@item.Status</td>
                        <td>
                            <a href="@Url.Action("Delete", new { id = item.ClaimID })">Delete</a>
                            <a href="@Url.Action("Approve", new { id = item.ClaimID })">Approve</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("CreateClaim", "Lecturer")" class="back-button">Back</a>
    </div>
</body>
</html>