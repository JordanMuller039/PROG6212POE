@model ST10150702_PROG6212_POE.Models.Lecturer

@{
    ViewData["Title"] = "Create an Account";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create an Account</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url('@Url.Content("~/Pictures/lecturebackground.jpg")');
            background-size: 350px;
            background-repeat: repeat;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(255, 255, 255, 0.6);
                z-index: 0;
            }

        .login-container {
            background-color: white;
            padding: 2.65rem;
            border-radius: 5px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            width: 400px;
            position: relative;
            z-index: 1;
        }

        h1 {
            color: #333;
            font-weight: bold;
            margin-bottom: 23px;
            text-align: center;
            font-size: 24px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        input {
            margin: 13px 0;
            padding: 13px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 18px;
        }

        button {
            background-color: #0066cc;
            color: white;
            border: none;
            padding: 13px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 20px;
            margin-top: 10px;
        }

            button:hover {
                background-color: #0056b3;
            }

        .back-link {
            text-align: center;
            margin-top: 26px;
        }

            .back-link a {
                color: #666;
                text-decoration: none;
                font-size: 18px;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }

        .role-selection {
            margin: 15px 0;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .role-option {
            margin: 10px 0;
        }

            .role-option label {
                margin-left: 10px;
                font-size: 16px;
            }

        .validation-message {
            color: red;
            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>
            <img src="/Pictures/VClogo.png" alt="Home" style="height: 60px; width: auto; margin-right: 10px;" />
            Create an Account
        </h1>

        @if (TempData["Error"] != null)
        {
            <div class="validation-message">
                @TempData["Error"]
            </div>
        }

        <form method="post" asp-controller="Lecturer" asp-action="CreateAccount">
            <input type="text" asp-for="LecName" placeholder="Name" required>
            <input type="text" asp-for="LecSurname" placeholder="Surname" required>
            <input type="number" step="0.01" asp-for="HourlyRate" placeholder="Hourly Rate" required>
            <input type="text" asp-for="UserName" placeholder="Username" required>
            <input type="password" asp-for="Password" placeholder="Password" required>

            <div class="role-selection">
                <div class="role-option">
                    <input type="radio" id="lecturer" name="role" value="lecturer" required>
                    <label for="lecturer">Lecturer</label>
                </div>
                <div class="role-option">
                    <input type="radio" id="manager" name="role" value="manager">
                    <label for="manager">Program Manager</label>
                </div>
                <div class="role-option">
                    <input type="radio" id="hr" name="role" value="hr">
                    <label for="hr">HR</label>
                </div>
            </div>

            <button type="submit">Create!</button>
        </form>
        <div class="back-link">
            <a href="/">Back to Home</a>
        </div>
    </div>

    @section Scripts {
        <script>
            // Ensure only one radio button can be selected at a time
            document.querySelectorAll('input[type="radio"][name="role"]').forEach(radio => {
                radio.addEventListener('change', function () {
                    document.querySelectorAll('input[type="radio"][name="role"]').forEach(otherRadio => {
                        if (otherRadio !== this) {
                            otherRadio.checked = false;
                        }
                    });
                });
            });
        </script>
    }
</body>
</html>